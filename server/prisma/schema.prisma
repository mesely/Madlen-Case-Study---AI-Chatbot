
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id        String    @id @default(uuid())
  title     String?   // Title of the conversation (e.g., "Create HTML Game")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@map("chats")
}

model Message {
  id        String   @id @default(uuid())
  content   String   // The actual text or LaTeX content
  role      String   // 'user' or 'assistant'
  imageUrl  String?  // Optional: For multi-modal support
  createdAt DateTime @default(now())
  
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("messages")
}